func! CompileRunGcc()
    exec "w"
    if &filetype == 'c'
        exec "!gcc % -o %<"
        exec "!time ./%<"
    elseif &filetype == 'cpp'
        exec "!g++ % -o %<"
        exec "!time ./%<"
    elseif &filetype == 'java'
        exec "!javac %"
        exec "!time java %<"
    elseif &filetype == 'sh'
        exec "!bash %"
        exec "!"
    elseif &filetype == 'python'
        exec "!python %"
        exec "!"
    elseif &filetype == 'html'
        exec "!firefox % &"
    endif
endfunc

